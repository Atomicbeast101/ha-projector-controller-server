version: "3.3"
services:
  controller:
    container_name: controller
    image: registry.potatolab.dev/adam/$DRONE_REPO_NAME:$DRONE_COMMIT_BRANCH-beta
    restart: unless-stopped
    ports:
      - '5000:5000/tcp'
    environment:
      TZ: America/Chicago
      API_TOKEN: $APP_API_KEY
    devices:
     - '/dev/ttyUSB0:/dev/ttyUSB0'
